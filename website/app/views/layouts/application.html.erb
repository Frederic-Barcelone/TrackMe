<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />

	<title>
		<%= controller.controller_name.capitalize + ' - ' + controller.action_name.capitalize %>
	</title>

	<%= stylesheet_link_tag 'default' %>
	<%= javascript_include_tag :defaults %>
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <script type="text/javascript" src="/javascripts/gmaps_track.js"></script>
        <script src="http://code.jquery.com/jquery-latest.min.js"></script>


      </head>
<body class="<%= h params[:controller] %> action-<%= h params[:action] %>">
	<div class="main">
		
		<div class="header_box">
			<%= link_to '<h1>Track Me</h1>', root_path %>
			<div>
				<% if current_user %>
					Welcome, <%= link_to h(current_user.to_s), user_path(current_user) %> |
					<%= link_to 'Logout', logout_path %>
				<% else %>
					<%= link_to 'Sign-up now!', signup_path %> |
					<%= link_to 'Login', login_path %>
				<% end %>
			</div>
			<%= render :partial => "shared/menu"%>
		</div>
		
		<div class="content">
			<p class="notice"><%= flash[:notice] %></p>
			<p class="error"><%= flash[:error] %></p>
			<%= yield %>
		</div>
		
	</div>
</body>
</html>
